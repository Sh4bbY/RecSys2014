<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{%d %-5p %C{2} (%F:%L) - %m%n}"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="hello" level="info"/>
    <Root level="trace">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>